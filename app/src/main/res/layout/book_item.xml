<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:columnCount="3"
    android:rowCount="1"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="25sp"
        android:text="BUY"
        android:id="@+id/buybutton"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/booknameid"
        android:layout_toRightOf="@+id/buybutton"
        android:textSize="26sp"
        android:text="fundamental of data "
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/costid"
        android:textSize="26sp"
        android:text="cost : 0"
        android:layout_below="@+id/booknameid"
        android:layout_alignLeft="@+id/booknameid"
        android:layout_alignBottom="@+id/buybutton"
        />

</RelativeLayout>